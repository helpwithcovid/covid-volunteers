<!-- Hero -->
<div class="container">
  <div class="rounded-xl bg-hero-black text-white overflow-hidden mb-24 mx-4 sm:mx-0 flex flex-col md:flex-row">
    <div class="relative w-full md:w-5/12 pb-7/12 md:pb-0 overflow-hidden">
      <%= image_pack_tag 'hero.jpg', class: 'absolute h-full w-full object-cover object-center md:relative' %>
    </div>
    <div class="flex-1 flex flex-col justify-center py-8 lg:py-12 px-6 lg:px-8">
      <h1 class="sm:text-xl text-2xl lg:text-4xl leading-tight font-serif">Projects to advance equity for the Black community.</h1>

      <div class="block w-1/4 border-t-4 border-white my-3 lg:my-8"></div>

      <h2 class="sm:text-sm text-lg xl:text-xl xl:leading-loose mt-2">The HelpWith Foundation, a non-profit division of Deed has just launched HWBE! Inspired by the growth of Help With Covid, a clearing house for COVID-19 related projects and volunteers looking to help out. Our goal is to provide resources and opportunities for anyone working on projects related to Black equity.</h2>
    </div>
  </div>

  <div class="my-16 flex flex-col md:flex-row">
    <div class="w-full md:w-1/3 mb-8 md:mb-0 mx-4 md:mx-0 font-serif text-3xl md:text-lg lg:text-4xl">
      <div class="block w-1/4 border-t-4 border-black mb-2 lg:mb-4"></div>

      <div class="block">Create a Mission.</div>
      <div class="block">Make a Change.</div>
      <div class="block">Action for Equity.</div>
    </div>
    <div class="flex-1 flex flex-col mx-4 sm:mx-0">
      <% Settings.project_categories.each do |category| %>
        <%= link_to category.slug, class: 'rounded overflow-hidden w-full mb-4 relative shadow-lg flex flex-col sm:flex-row group' do %>
          <div class="transition-all duration-150 ease-in-out sm:group-hover:w-4 w-full sm:w-2 h-2 sm:h-auto sm:min-h-full bg-<%= category.color %>"></div>
          <div class="w-full flex items-center sm:w-56 font-medium px-8 py-4 bg-hero-black text-white text-md md:text-lg"><%= category.name %></div>
          <div class="flex-1 flex px-8 align-center items-center bg-gray-200 py-4 md:py-0"><%= category.body %> <%= inline_svg_pack_tag 'media/svgs/chevron-right.svg', class: 'absolute left-auto right-0 mr-2 h-8 w-8 fill-current' %></div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Featured projects -->
  <div class="relative container z-10 pb-4">
    <%= render partial: 'partials/featured-projects', locals: {projects: @featured_projects, category: nil} %>
  </div>
</div>

<!-- Upcoming events -->
<div class="bg-gray-100 shadow-inner">
  <div class="container pt-10 pb-8 px-4">
    <%= render partial: 'partials/events' %>
  </div>
</div>
