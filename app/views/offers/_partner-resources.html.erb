<section id="partner_resource">
  <div class="container pb-8">
    <div class="px-4 sm:px-0 mt-10 mb-6 font-bold text-center">
      Resources for HWC Projects from our Partners
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-4 row-gap-16 lg:col-gap-12 justify-center w-2/3 mx-auto items-center my-16">
      <%= image_pack_tag "aws.png", class: "h-8 mx-auto object-contain" %>
      <%= image_pack_tag "clozeloop.png", class: "h-14 mx-auto object-contain" %>
      <%= image_pack_tag "turtle_dev.png", class: "h-14 mx-auto object-contain" %>
      <%= image_pack_tag "blind.png", class: "h-14 mx-auto object-contain -mt-2" %>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-4">
      <% Settings.partner_resources.each do |partner| %>
        <div class="mx-4 sm:mx-0 flex flex-col hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out shadow bg-white rounded-lg overflow-hidden">
          <div class="flex items-center justify-between space-y-top-4 space-y-bottom-4 ml-4">
            <div class="flex items-center">
              <div class="text-base leading-5 font-medium text-primary-600 truncate px-2">
                <%= partner[:name] %>
              </div>
              <div class="flex flex-row flex-wrap space-x-right-2">
                <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium leading-5 flex-grow-0 flex-shrink-0 bg-blue-100 text-blue-800  bg-blue-300">
                  <%= t('partner') %>
                </div>
              </div>
            </div>
            <% if partner[:mail_to] %>
              <%= mail_to partner[:mail_to]  do %>
                <div class="text-sm leading-5 font-medium text-primary-600 truncate px-4 sm:px-6 mr-2">
                  <%= t('apply_here') %>
                  <%= inline_svg_pack_tag 'media/svgs/right-link.svg', class: 'inline-block' %>
                </div>
              <% end %>
            <% elsif partner[:cta_link] %>
              <%= link_to partner[:cta_link], target: '_blank'  do %>
                <div class="text-sm leading-5 font-medium text-primary-600 truncate px-4 sm:px-6 mr-2">
                  <%= t('apply_here') %>
                  <%= inline_svg_pack_tag 'media/svgs/right-link.svg', class: 'inline-block' %>
                </div>
              <% end %>
            <% end %>
          </div>
          <hr>
          <div class="mt-2 sm:flex sm:justify-between pt-2 pb-1 px-4 sm:px-6 flex-1">
            <div class="text-sm leading-5 text-gray-500">
              <p><%= partner[:description] %></p>
            </div>
          </div>
          <div class="mt-4 sm:flex sm:justify-between px-4 pt-2 sm:px-6 bg-secondary-100 text-primary-600">
            <div class="sm:flex">
              <div class="flex items-center text-xs leading-5">
              </div>
            </div>
            <div class=" flex items-center text-xs leading-5">
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
