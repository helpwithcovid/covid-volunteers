<%- share_title @page_title %>

<div class="container">
  <div class="mx-auto w-full text-center mt-6 mb-12">
    <div class="font-bold text-2xl mb-4 text-gray-700"><%= @page_title %></div>
    <div class="mb-4 leading-tight text-gray-700">How projects bring people together<br/>and the progress they made.</div>
  </div>

  <% if @posts.present? %>
    <%
      odds = @posts.each_with_index.select { |p, index| index % 2 == 0 }.map(&:first)
      evens = @posts.each_with_index.select { |p, index| index % 2 != 0 }.map(&:first)
     %>
    <div class="mt-4">
      <div class="w-full px-8 sm:px-0 grid md:grid-cols-2 gap-8 md:hidden">
        <%= render partial: 'post-card', collection: @posts, as: :post, cached: true %>
      </div>
      <div class="w-full px-8 sm:px-0 grid md:grid-cols-2 gap-8 hidden md:grid">
        <div class="space-y-8">
          <%= render partial: 'post-card', collection: odds, as: :post, cached: true %>
        </div>
        <div class="space-y-8">
          <%= render partial: 'post-card', collection: evens, as: :post, cached: true %>
        </div>
      </div>
      <div class="border-t border-gray-200 mt-8">
        <%= paginate @posts, theme: 'projects_paginator' %>
      </div>
    </div>
  <% else %>
  <div class="flex flex-col justify-center items-center min-h-400px text-gray-400 text-lg text-center">
    <%= inline_svg_pack_tag 'media/svgs/empty-graphic.svg' %>
    <span class="mt-8">No success story found. Try another search! <br> Or create a success story <%= link_to 'here', new_post_path, class: 'font-bold' %>.</span>
  </div>
  <% end %>
</div>
