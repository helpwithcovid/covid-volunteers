<!-- Hero -->
<div class="bg-white -mt-10 pt-24 ">
  <div class="container mb-4 text-center mb-24">
    <h1 class="text-2xl sm:text-4xl font-bold tracking-tight leading-tight">Volunteer for COVID-19 projects</h1>
    <h2 class="sm:text-2xl tracking-tight leading-tight mt-2">We help people find the resources they need.</h2>

    <div class="relative w-64 mx-auto">
      <%= form_with url: projects_path, local: true, method: :get, html: {'x-ref': 'searchForm'} do |form| %>
        <%= form.text_field :query, placeholder: "Search", value: params[:query], class: "border border-indigo-100 p-2 pr-9 mt-4 rounded-full w-full text-center border-indigo-400 text-indigo-600 outline-none focus:border-indigo-600", required: true %>
        <button class="absolute inset-auto right-0 p-2 rounded-full cursor-pointer border-none shadow-none text-sm bg-transparent p-0 hover:bg-gray-100 transition duration-75" style="margin-top: 19px; margin-right: 5px" @click="$refs.searchForm.submit()">
          <%= inline_svg_pack_tag 'media/svgs/magnifier.svg' %>
        </button>
      <% end %>
    </div>
    <div class="text-indigo-700 mt-4">We are <%= number_with_delimiter @project_count %>+ projects and <%= number_with_delimiter @volunteer_count %>+ volunteers strong.</div>
  </div>

  <!-- Featured projects -->
  <div class="relative container z-10 pb-4">
    <%= render partial: 'partials/featured-projects', locals: {projects: @featured_projects, category: nil} %>
  </div>
</div>

<!-- Project categories -->
<div class="relative featured-categories bg-indigo-600 color-white pt-32 mb-16 sm:-mt-12 xl:-mt-24">
  <div class="container z-10 grid grid-cols-1 sm:grid-cols-3 gap-12 sm:gap-4 md:gap-12 lg:gap-24 xl:gap-48 pb-24 sm:py-20 px-12 sm:px-0 lg:px-12 xl:px-24">
    <%= render partial: 'featured-category', collection: @project_categories, as: :category %>
  </div>
</div>

<!-- Project categories -->
<div class="container">
  <% cache @project_categories do %>
    <%= render partial: 'project-category', collection: @project_categories, as: :category %>
  <% end %>
</div>

<!-- Upcoming events -->
<div class="bg-gray-100 shadow-inner">
  <div class="container pt-10 pb-8 px-4">
    <%= render partial: 'partials/events' %>
  </div>
</div>
