<%= render partial: 'layouts/favicons' %>

<meta property="og:type" content="<%= content_for(:share_og_type) || "article" %>" />
<meta property="og:title" content="<%= content_for(:share_title) || Settings.site_title %>"/>
<meta property="og:description" content="<%= content_for(:share_desc) || Settings.site_subtitle %>"/>
<meta property="og:url" content="<%= content_for(:share_url) || Settings.site_url %>"/>
<meta property="og:site_name" content="<%= content_for(:share_title) || Settings.site_title %>"/>
<meta property="og:image" content="<%= content_for(:share_img) || asset_pack_url("media/images/share-image.png") %>"/>
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="630"/>

<meta name="twitter:card" content="<%= content_for(:share_twitter_card_type) || "summary_large_image" %>"/>
<meta name="twitter:title" content="<%= content_for(:share_title) || Settings.site_title %>"/>
<meta name="twitter:description" content="<%= content_for(:share_desc) || Settings.site_subtitle %>"/>
<meta name="twitter:url" content="<%= content_for(:share_url) || Settings.site_url %>"/>
<meta name="twitter:image" content="<%= content_for(:share_img) || asset_pack_url("media/images/share-image.png") %>"/>

<meta rel="canonical" content="<%= Settings.site_url %>"/>
