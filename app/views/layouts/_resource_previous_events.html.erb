<div class="mx-4 sm:mx-0 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% Settings.events.each do |event| %>
    <div class="flex flex-col justify-between shadow bg-white rounded-lg overflow-hidden">
      <div class="p-4">
        <div class="flex justify-between">
          <div class="font-bold text-sm text-primary-600 mb-2 leading-tight"><%= event[:title].html_safe %></div>
        </div>
        <div class="text-sm text-gray-500 leading-tight"><%= event[:sub_title].html_safe %></div>
      </div>

      <div class="text-center mb-4">
        <%= link_to event[:cta_url], target: '_blank' do %>
          <span class="text-xs relative inline-flex items-center px-4 py-2 border border-transparent leading-5 rounded-md font-bold  bg-secondary-200 text-primary-600 hover:bg-secondary-300 focus:outline-none focus:shadow-outline-primary focus:border-secondary-300 active:bg-secondary-300 rounded-md shadow-sm">
            <%= event[:cta_text] %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
