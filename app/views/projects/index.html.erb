<%- share_title @page_title %>

<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 mb-4">
    <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
        <div class="ml-4 mt-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                <%= @projects_header %>
            </h3>
            <p class="mt-1 text-sm leading-5 text-gray-500">
                <%= @projects_subheader %>
            </p>
        </div>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <div class="ml-4 mt-4 flex-shrink-0">
            <span class="inline-flex rounded-md shadow-sm">
                <a href="https://www.facebook.com/New-Haven-Help-with-Covid-19-100919271572189" class="fa fa-facebook"></a>
                <a href="https://twitter.com/NHhelpwithCOVID" class="fa fa-twitter"></a>
                <a href="https://mailchi.mp/88b5c8c73c61/nhhelpwithcovid" class="fa fa-envelope"></a>
            </span>
        </div>
    </div>
</div>

<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 mb-4">
    <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
        <div class="ml-4 mt-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Want to volunteer your skills to an existing project?
            </h3>
            <% if current_user.blank? %>
            <p class="mt-1 text-sm leading-5 text-gray-500"><b>
                    <%= link_to 'Sign up', new_user_registration_path, class: 'text-indigo-500' %> to volunteer.
                </b></p>
            <% elsif !current_user.has_complete_profile? %>
            <p class="mt-1 text-sm leading-5 text-gray-500">
                <%= link_to 'Fill out your profile', edit_user_registration_path, class: 'text-indigo-500' %> to volunteer. Then, look below for projects. You can also make yourself visible in <%= link_to 'the database', volunteers_path, class: 'text-indigo-500' %>, so that organizers can reach out to you.
            </p>
            <% elsif current_user.has_complete_profile? %>
            <p class="mt-1 text-sm leading-5 text-gray-500">
                Look below for projects that need volunteers with your skills. You can also make yourself visible in <%= link_to 'the database', volunteers_path, class: 'text-indigo-500' %>, so that organizers can reach out to you.
            </p>
            <% end %>
            <p class="mt-1 text-sm leading-5 text-green-500">
                We are currently socializing local organizations with this platform and anticipate that many volunteer positions will be posted here shortly. Please follow us on <a href="https://www.facebook.com/New-Haven-Help-with-Covid-19-100919271572189" class="text-indigo-500" target="_blank">Facebook</a> or <a href="https://twitter.com/NHhelpwithCOVID" class="text-indigo-500" target="_blank">Twitter</a> or sign up for our regular <a href="https://mailchi.mp/88b5c8c73c61/nhhelpwithcovid" class="text-indigo-500" target="_blank">newsletter</a> to receive updates on the latest openings. Thank you!</p>
        </div>
    </div>
</div>

<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 mb-4">
    <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
        <div class="ml-4 mt-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Does your project need volunteers?
            </h3>
            <p class="mt-1 text-sm leading-5 text-gray-500">
                Get started by creating an account, and listing your project.
            </p>
        </div>
        <div class="ml-4 mt-4 flex-shrink-0">
            <span class="inline-flex rounded-md shadow-sm">
                <%= link_to new_project_path do %>
                <button type="button" class="relative inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700">
                    Create volunteer position
                </button>
                <% end %>
            </span>
        </div>
    </div>
</div>

<% if @show_filters %>
<div x-data="{ open: <%= @filters_open %>, sortOpen: false}">
    <div class="block mb-4 relative">
        <nav class="flex flex-col sm:flex-row justify-between">
            <a href="#" :class="{'bg-gray-200': open}" class="px-3 py-2 font-medium text-sm leading-5 rounded-md text-gray-600 hover:text-gray-800 focus:outline-none fill-current flex-no-wrap mb-4 sm:mb-0" @click.prevent="Covid.toggleFiltersOpen(); open = !open">
                <%= inline_svg_pack_tag('media/svgs/filter-outline.svg', class: 'h-4 inline-block') %> Filter volunteer positions
            </a>
            <div class="flex flex-col md:flex-row">
                <% if @show_search_bar %>
                <div class="w-full sm:w-64">
                    <%= form_with url: projects_path, local: true, method: :get, html: {'x-ref': 'searchForm'}  do |form| %>
                    <div class="relative rounded-md shadow-sm">
                        <%= form.text_field :query, placeholder: "Search", value: params[:query], class: "form-input block w-full sm:text-sm sm:leading-5" %>
                        <div class="absolute inset-auto right-0 top-0 cursor-pointer" @click="$refs.searchForm.submit()">
                            <%= inline_svg_pack_tag('media/svgs/search-outline.svg', class: 'translate-y-1/2 mr-2 h-4 inline-block', style: 'margin-top: 10px;') %>
                        </div>
                    </div>
                    <% end %>
                </div>
                <% end %>
                <% if @show_sorting_options %>
                <div class="ml-2 flex">
                    <%= sort_drop_down do %>
                    <%= sort_drop_down_option(projects_path, 'Sort by') %>
                    <%= sort_drop_down_option(projects_path, 'Volunteers Needed', 'volunteers_needed') %>
                    <%= sort_drop_down_option(projects_path, 'Latest', 'latest') %>
                    <%= sort_drop_down_option(projects_path, 'Earliest', 'earliest') %>
                    <% end %>
                </div>
                <% end %>
            </div>
        </nav>
    </div>
    <div :class="{'block': open, 'hidden': !open}" class="hidden">
        <%= render partial: 'partials/filters', locals: {label: 'Filter volunteer positions by skills needed', model: 'projects', filter_by: 'skills', skills: ALL_SKILLS} %>
        <%= render partial: 'partials/filters', locals: {label: 'Filter volunteer positions by project type', model: 'projects',filter_by: 'project_types', skills: ALL_PROJECT_TYPES} %>
    </div>
</div>
<% end %>

<% if @projects.present? %>
<div class="bg-white shadow overflow-hidden sm:rounded-md">
    <%= paginate @projects %>
</div>
<div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul>
        <% @projects.each do |project| %>
            <% if project.is_visible_to_user?(current_user) %>
                <script>
                    console.log("VISIBBY");
                </script>
                <%= render partial: 'project', locals: { project: project,  } %>
            <% end %>
        <% end %>
    </ul>
    <%= paginate @projects %>
</div>
<% end %>