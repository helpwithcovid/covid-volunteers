<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 mb-4">
  <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
    <div class="ml-4 mt-4">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= label %>
      </h3>
      <p class="mt-4 text-sm leading-5 text-gray-500 flex flex-wrap justify-center">
        <%= filter_badge label: 'Show all', model: model, color: 'gray' %>
        <% skills.each do |skill|%>
          <%= filter_badge label: skill, model: model, filter_by: filter_by %>
        <% end %>
      </p>
    </div>
  </div>
</div>
