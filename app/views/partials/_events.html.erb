<div class="container pb-8">
  <section class="resource-section" id="resource_playbook">
    <div class="px-4 sm:px-0 my-6 font-bold text-center">
      Get the Playbook
    </div>

    <div class="mx-4 sm:mx-0 flex flex-wrap mb-3 text-sm rounded-lg shadow overflow-hidden">
      <div class="w-full sm:w-2/6 text-center bg-gray-400 px-4 py-2 text-white bg-indigo-600 font-bold">
        <div class="flex items-center justify-center h-full">
          HWC Volunteer Playbook: The Project Guide
        </div>
      </div>
      <div class="w-full sm:w-4/6 bg-white py-4">
        <div class="flex flex-wrap h-full items-center justify-center">
          <div class="w-full sm:w-9/12 px-8 text-gray-500">
            A short guide created by our team to help you successfully manage your project and volunteers!
          </div>

          <div class="w-full sm:w-3/12 text-center mt-8 sm:mt-0">
            <%= link_to "https://docs.google.com/document/d/1f_-g893NGawa5n4KyDw6zjrocO2VBS5b2siQIZ6csY0/view", target: '_blank' do %>
              <span class="text-sm relative inline-flex items-center px-4 py-2 border border-transparent leading-5 rounded-md font-bold   text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700">
                Download Playbook
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <% if Settings.upcoming_events.present? %>
    <section class="resource-section" id="resources_upcoming_events">
      <div class="px-4 sm:px-0 mt-10 mb-6 font-bold text-center">
        Upcoming Events
      </div>

      <%= render partial: "layouts/resource_upcoming_events" %>
    </section>
  <% end %>

  <section class="resource-section" id="resources_recorded_live_panels">
    <div class="px-4 sm:px-0 mt-10 mb-6 font-bold text-center">
      Recorded Live Panels
    </div>

    <%= render partial: "layouts/resource_previous_events" %>
  </section>
</div>
